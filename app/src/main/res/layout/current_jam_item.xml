<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        >
        <RelativeLayout
            android:id="@+id/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_credit_card_white_36dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/lblJamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_current_jam_name"
                android:layout_toLeftOf="@+id/imgCard"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/txtCurrentJamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/lblJamName"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textDirection="rtl"/>

            <ImageView
                android:id="@+id/imgDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCurrentJamName"
                android:layout_marginTop="@dimen/margin_to_jam_header_row_image"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_date_range_white_36dp"
                android:layout_gravity="center_vertical|left"
                android:gravity="center_vertical|left"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/lblNextJamDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_next_jam_date"
                android:layout_marginTop="@dimen/margin_to_jam_header_row"
                android:layout_toLeftOf="@+id/imgDate"
                android:layout_below="@+id/txtCurrentJamName"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textDirection="rtl"/>

            <TextView
                android:id="@+id/txtNextJamDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/margin_to_jam_header_row"
                android:layout_toLeftOf="@+id/lblNextJamDate"
                android:layout_below="@+id/txtCurrentJamName"
                android:textDirection="rtl"/>

            <ImageView
                android:id="@+id/imgPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblNextJamDate"
                android:layout_marginTop="@dimen/margin_to_jam_header_row_image"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_person_white_36dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/lblOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_creator"
                android:layout_below="@+id/lblNextJamDate"
                android:layout_toLeftOf="@+id/imgPerson"
                android:layout_marginTop="@dimen/margin_to_jam_header_row"
                android:layout_marginRight="5dp"
                android:textDirection="rtl"/>

            <TextView
                android:id="@+id/txtOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/lblOwner"
                android:layout_below="@+id/txtNextJamDate"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/margin_to_jam_header_row"
                android:textDirection="rtl"/>

            <ImageView
                android:id="@+id/imgMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgPerson"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_monetization_on_white_36dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/lblShareValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_jam_share_value"
                android:layout_below="@+id/imgPerson"
                android:layout_toLeftOf="@+id/imgMoney"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:textDirection="rtl"/>

            <TextView
                android:id="@+id/txtshareValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/lblShareValue"
                android:layout_below="@+id/imgPerson"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:textDirection="rtl"/>

            <EditText
                android:id="@+id/hiddenCurrentJamId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:layout_alignParentBottom="true"
                android:gravity="center|center_vertical"
                >
                <ImageView
                    android:id="@+id/share_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_share_white_24dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="share_jam"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/delete_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_delete_white_24dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="delete_jam"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/share_jam"/>
                <ImageView
                    android:id="@+id/view_jam_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_visibility_white_24dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="view_jam"
                    android:layout_toLeftOf="@+id/delete_jam"/>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>