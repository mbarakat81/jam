<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_margin="5dp"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/txtSharePaidAmount"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textSize="12dp"
        android:text="9999"
        android:gravity="right"
        android:layout_toLeftOf="@+id/userPaymentPaid"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white" />
    <ImageView
        android:id="@+id/imgJamSharesNo"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txtSharePaidAmount"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:src="@drawable/ic_person_white_24dp"
        />

    <TextView
        android:id="@+id/txtSharePayer"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:layout_marginRight="3dp"
        android:textSize="12dp"
        android:text="user name"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgJamSharesNo" />
    <TextView
        android:id="@+id/lblAskForPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginRight="5dp"
        android:text="@string/lbl_ask_if_paid"
        android:layout_centerVertical="true"
        android:textSize="12dp"
        android:layout_toLeftOf="@+id/txtSharePayer"/>
    <ImageView
        android:id="@+id/paid"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_white_24dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lblAskForPayment"/>

    <ImageButton
        android:id="@+id/notifyUserToPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_notifications_active_white_24dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/userPaymentPaid"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_monetization_on_white_24dp"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/userPaymentPending"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_money_off_white_24dp"
        android:layout_toRightOf="@+id/txtSharePaidAmount"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/imgThumbUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_thumb_up_white_24dp"
        android:layout_toRightOf="@+id/userPaymentPaid"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/imgThumbDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_thumb_down_white_24dp"
        android:layout_toRightOf="@+id/userPaymentPaid"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout>