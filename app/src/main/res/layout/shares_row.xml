<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

        <android.support.v7.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "285dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="4dp"
        >
            <RelativeLayout
                android:id="@+id/main_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="Delivered"
                    android:textSize="50dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:gravity="top|center"
                    android:textColor="@android:color/black"
                    android:clickable="true"
                    android:background="@color/colorPrimary"
                    android:alpha="0.40"
                    android:id="@+id/btnDelivered"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/lblShareStartDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_delivery_date"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="10dp"
                    android:textSize="17dp"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/txtShareStartDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textSize="17dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/white"
                    android:layout_toLeftOf="@+id/lblShareStartDay"/>
                <AutoCompleteTextView
                    android:id="@+id/addRecName1"
                    android:ems="10"
                    android:textColorHint="@android:color/white"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:layout_alignParentRight="true"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_below="@+id/txtShareStartDay"
                    android:layout_marginRight="10dp"
                    android:completionThreshold="3"
                    android:clickable="true"
                    android:textSize="15dp"
                    android:hint="@string/hint_share_owner_name"/>
                <EditText
                    android:id="@+id/subShareAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/addRecName1"
                    android:textColorHint="@android:color/white"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_below="@+id/lblShareStartDay"
                    android:hint="@string/hint_share_owner_amount"
                    />
                <ImageView
                    android:id="@+id/btnAddRecToShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_toLeftOf="@+id/subShareAmount"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_group_add_white_24dp"
                    android:layout_below="@+id/lblShareStartDay"
                    />
                <ListView
                    android:id="@+id/lvSharesParticipants"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/addRecName1"/>
                <Button
                    android:id="@+id/btnShareDelivered"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/lbl_delivered"
                    android:clickable="true"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/lvSharesParticipants"
                    />
                <EditText
                    android:id="@+id/hiddenJId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hiddenShareNo"
                    android:visibility="gone"/>
                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hiddenJAmount"
                android:visibility="gone"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hiddenJAddedAmount"
                    android:visibility="gone"/>
            </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/backText"
                        android:text="@string/lbl_payers_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ListView
                        android:id="@+id/lvSharePayments"
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/backText"/>
                    <Button
                        android:id="@+id/btnFlipToFront"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flib"
                        android:visibility="gone"/>
            </RelativeLayout>

                <Button
                    android:id="@+id/btnFlipToBack"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_payers_list"/>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>