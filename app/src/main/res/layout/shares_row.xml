<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:color/transparent"
  >
    <android.support.v7.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_delivery_date"
                android:id="@+id/lblShareStartDay"
                android:textColor="@android:color/white"
                android:textSize="17dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtShareStartDay"
                android:clickable="true"
                android:textSize="17dp"

                android:textColor="@android:color/white"
                android:layout_toLeftOf="@+id/lblShareStartDay"
                android:layout_centerHorizontal="true" />

            <AutoCompleteTextView
                android:id="@+id/addRecName1"
                android:ems="10"
                android:textColorHint="@android:color/white"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:layout_alignParentRight="true"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_below="@+id/txtShareStartDay"
                android:completionThreshold="3"
                android:clickable="true"
                android:textSize="15dp"
                android:hint="@string/hint_share_owner_name"/>

            <EditText
                android:id="@+id/subShareAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/addRecName1"
                android:textColorHint="@android:color/white"
                android:gravity="right"
                android:textSize="15dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_below="@+id/lblShareStartDay"
                android:hint="@string/hint_share_owner_amount"
                />
            <ImageView
                android:id="@+id/btnAddRecToShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_toLeftOf="@+id/subShareAmount"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_group_add_white_24dp"
                android:layout_below="@+id/lblShareStartDay"
                />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/lvSharesParticipants"
                android:layout_alignParentRight="true"

                android:layout_below="@+id/addRecName1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/sharesAddParticipants"
                android:layout_below="@+id/lvSharesParticipants"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hiddenJId"
                android:visibility="gone"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hiddenShareNo"
                android:visibility="gone"/>
            <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hiddenJAmount"
            android:visibility="gone"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hiddenJAddedAmount"
                android:visibility="gone"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>