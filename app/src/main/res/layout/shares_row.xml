<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height = "180dp"
    android:nestedScrollingEnabled="true"
  >

        <android.support.v7.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="@color/colorAccent"
        >
            <RelativeLayout
                android:id="@+id/main_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="visible">

                <Button
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Delivered"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:gravity="top|center"
                    android:textColor="@android:color/black"
                    android:clickable="true"
                    android:background="@color/colorPrimary"
                    android:alpha="0.40"
                    android:id="@+id/btnDelivered"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/lblShareStartDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_delivery_date"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/txtShareStartDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/white"
                    android:layout_toLeftOf="@+id/lblShareStartDay"/>
                <EditText
                    android:id="@+id/addRecName1"
                    android:ems="10"
                    android:textColorHint="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_below="@+id/txtShareStartDay"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:textSize="12dp"
                    android:hint="@string/hint_share_owner_name"/>
                <EditText
                    android:id="@+id/subShareAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/addRecName1"
                    android:textColorHint="@android:color/white"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:textSize="12dp"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_below="@+id/lblShareStartDay"
                    android:hint="@string/hint_share_owner_amount"
                    />
                <ImageView
                    android:id="@+id/btnAddRecToShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_toLeftOf="@+id/subShareAmount"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_group_add_white_24dp"
                    android:layout_below="@+id/lblShareStartDay"
                    />
                <ListView
                    android:id="@+id/lvSharesParticipants"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/addRecName1"/>
                <Button
                    android:id="@+id/btnShareDelivered"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/lbl_delivered"
                    android:clickable="true"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_above="@+id/tt"
                    android:visibility="gone"

                    />
                    <Button
                        android:id="@+id/tt"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="@string/lbl_payers_list"/>
                <EditText
                    android:id="@+id/hiddenJId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hiddenShareNo"
                    android:visibility="gone"/>
                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hiddenJAmount"
                android:visibility="gone"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hiddenJAddedAmount"
                    android:visibility="gone"/>
            </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/notifyAllUsersToPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:src="@drawable/ic_notifications_active_white_24dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/lblNotifyAllUsersToPay"
                        android:text="@string/ntf_all_jam_users_to_pay"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"
                        android:layout_margin="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/notifyAllUsersToPay"/>
                    <TextView
                        android:id="@+id/backText"
                        android:text="@string/lbl_payers_list"
                        android:textColor="@android:color/white"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtMoneyLeft"
                        android:text="متبقي: "
                        android:textColor="@android:color/white"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                    <ListView
                        android:id="@+id/lvSharePayments"
                        android:layout_width="wrap_content"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/backText"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:gravity="center|center_vertical"
                    android:id="@+id/btnFlipToBack"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#850b0b0b"
                    android:textSize="14dp"
                    android:textColor="@android:color/white"
                    android:text="@string/lbl_payers_list"/>
            </RelativeLayout>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>